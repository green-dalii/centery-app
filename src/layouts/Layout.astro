--- 
import Toast from '../components/Toast.astro';
import Header from '../components/Header.astro';
import BottomNav from '../components/BottomNav.astro';

export interface Props {
	title: string;
}
const { title } = Astro.props;
import "../styles/global.css"
---
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <style>
        /* Force override DaisyUI default theme colors */
        :root,
        html[data-theme="light"],
        [data-theme="light"] {
            --color-primary: oklch(72% 0.219 149.579) !important;
            --color-primary-content: oklch(100% 0 0) !important;
            --color-secondary: oklch(92% 0 0) !important;
            --color-secondary-content: oklch(72% 0.219 149.579) !important;
        }
        
        html[data-theme="dark"],
        [data-theme="dark"] {
            --color-primary: oklch(72% 0.219 149.579) !important;
            --color-primary-content: oklch(96% 0.018 272.314) !important;
            --color-secondary: oklch(96% 0.007 247.896) !important;
            --color-secondary-content: oklch(72% 0.219 149.579) !important;
        }
    </style>
</head>
<body class="bg-base-200 min-h-screen">
    <div id="app" class="mx-auto bg-base-100 min-h-screen shadow-lg flex flex-col">
        <Header title={title} />
        <main class="flex-grow pb-16">
            <slot />
        </main>
        <BottomNav />
        <Toast />
    </div>
</body>
</html>